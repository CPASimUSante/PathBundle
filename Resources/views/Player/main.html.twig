{% extends "ClarolineCoreBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/innovapath/css/app.css') }}"/>
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/innovapath/css/step-edit.css') }}"/>
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/innovapath/css/navbar.css') }}"/>
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/innovapath/css/player.css') }}"/>
{% endblock %}

{% block content %}
    <div class="col-md-12 section-content">
        <div class="panel panel-default panel-path-editor">
            <div class="panel-heading">
                <h3 class="panel-title" id="player-header">
                    {# {{ 'path' | trans({}, 'innova_tools') }} : #} <strong>{{ path.resourceNode.name }}</strong>
                </h3>
                <div class="editor-buttons">
                    <a href="{{ path('claro_workspace_open_tool', {workspaceId: workspace.id, toolName: 'innova_path'}) }}" class="btn btn-danger btn-sm" tooltip="{{ 'back_to_paths_list' | trans({}, 'innova_tools') }}"><span class="icon-reply"></span></a>
                </div>
            </div>
            <div class="panel-body">

                <div class="panel panel-default tree">
                    <div class="panel-body">
                    {% if step.lvl > 0 %}
                        {% for i in 0..step.lvl - 1 %}
                            {% for steps in fullPath[i] %}
                                {% if allParents[i] == steps %}
                                    <a rel="tooltip" data-original-title="{{ steps.name}}" class="step current btn btn-lg btn-default lvl-{{ i }}" href="{{ path('innova_step_show', { workspaceId: workspace.id, pathId: path.resourceNode.id, stepId : steps.id }) }}">
                                    </a>
                                {% else %}
                                     <a rel="tooltip" data-original-title="{{ steps.name}}" class="step btn btn-lg btn-default lvl-{{ i }}" href="{{ path('innova_step_show', { workspaceId: workspace.id, pathId: path.resourceNode.id, stepId : steps.id }) }}">
                                    </a>
                                {% endif %}
                            {% endfor %}
                            <span class="separator"></span>
                        {% endfor %}
                    {% endif %}
                        
                    {% for sibling in siblings %}
                        {% if sibling == step %}
                            <a rel="tooltip" data-original-title="{{ sibling.name}}" class="current btn btn-lg btn-default lvl-{{ step.lvl }}" href="{{ path('innova_step_show', { workspaceId: workspace.id, pathId: path.resourceNode.id, stepId : sibling.id }) }}">
                            <span class="icon icon-map-marker"></span>
                            </a>
                        {% else %}
                            <a rel="tooltip" data-original-title="{{ sibling.name}}" class="btn btn-lg btn-default lvl-{{ step.lvl }}" href="{{ path('innova_step_show', { workspaceId: workspace.id, pathId: path.resourceNode.id, stepId : sibling.id }) }}">
                               
                            </a>
                        {% endif %}
                    {% endfor %}
                        
                    {% if children %}
                        <span class="separator"></span>
                        {% for child in children %}
                        <a class="btn btn-lg btn-default" rel="tooltip" data-original-title="{{ child.name }}" href="{{ path('innova_step_show', { workspaceId: workspace.id, pathId: path.resourceNode.id, stepId : child.id }) }}"> &nbsp;
                        </a>
                        {% endfor %}
                    {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                         <div class="panel panel-default">
                            <div class="panel-heading"><i class="icon-pushpin"></i> {{ 'informations' | trans({}, 'innova_tools') }}</div>
                            <div class="panel-body">
                                {% if step.duration|date('H:i') !=  "00:00" %} 
                                    <img rel="tooltip" data-original-title="{{ 'duration' | trans({}, 'innova_tools') }}" src="{{ asset('bundles/innovapath/images/icons/time.png') }}"/>  {{ step.duration|date('H:i') }} 
                                {% endif %}
                                {% if step.stepWho %} 
                                    <img rel="tooltip" data-original-title="{{ step.stepWho.name | trans({}, 'innova_tools') }}" src="{{ asset('bundles/innovapath/images/icons/who/'~ step.stepWho.id  ~'.png') }}"/>
                                {% endif %}
                                {% if step.stepWhere %} 
                                    <img rel="tooltip" data-original-title="{{ step.stepWhere.name | trans({}, 'innova_tools') }}" src="{{ asset('bundles/innovapath/images/icons/where/'~ step.stepWhere.id  ~'.png') }}"/> 
                                {% endif %}
                                {% if step.withComputer %}
                                    <img rel="tooltip" data-original-title="{{ 'with_computer' | trans({}, 'innova_tools') }}" src="{{ asset('bundles/innovapath/images/icons/computer.png') }}"/>
                                {% else %}  
                                    <img rel="tooltip" data-original-title="{{ 'without_computer' | trans({}, 'innova_tools') }}" src="{{ asset('bundles/innovapath/images/icons/no_computer.png') }}"/>
                                {% endif %}
                                {% if step.withTutor %}
                                    <img rel="tooltip" data-original-title="{{ 'with_tutor' | trans({}, 'innova_tools') }}" src="{{ asset('bundles/innovapath/images/icons/tutor.png') }}"/>
                                {% else %}  
                                    <img rel="tooltip" data-original-title="{{ 'without_tutor' | trans({}, 'innova_tools') }}" src="{{ asset('bundles/innovapath/images/icons/no_tutor.png') }}"/>
                                {% endif %}
                            </div>
                        </div>
                        
                        <div class="panel panel-default">
                            <div class="panel-heading"><i class="icon-briefcase"></i>  {{ 'resources' | trans({}, 'innova_tools') }}</div>
                            <div class="panel-body">
                                <input type="hidden" id="step-id" value="{{ path('innova_herited_resources', {stepId: step.id}) }}"/>
                                <div id="herited-resources"></div>
                                {% if resources %}
                                <div class="panel panel-default">
                                    <div class="panel-heading"><strong>{{ 'local' | trans({}, 'innova_tools') }}</strong></div>
                                    <div class="panel-body">
                                        {% for resource in resources["digital"] %}
                                            <a target="_blank" href="{{ path('claro_resource_open', {'resourceType': resource.resourceType.name, 'node': resource.id })  }}?_mode=path"><img rel="tooltip" data-original-title="{{ resource.name }}" width="32px" src="{{asset(resource.icon.relativeUrl) }}"/></a>
                                        {% endfor %}
                                        {% for i, resource in resources["nonDigital"] %}
                                            <img data-toggle="modal" data-target="#myModal-{{ i }}" rel="tooltip" data-original-title="{{ resource.resourceNode.name }}" width="32px" src="{{ asset('bundles/innovapath/images/icons/document/32x32/'~ resource.nonDigitalResourceType.name  ~'.png') }}"/>
                                            <div class="modal fade" id="myModal-{{ i }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                  <div class="modal-content">
                                                    <div class="modal-header">
                                                      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                      <h4 class="modal-title">{{ resource.resourceNode.name }}</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                      {{ resource.description }}
                                                    </div>
                                                    <div class="modal-footer">
                                                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                    </div>
                                                  </div>
                                                </div>
                                              </div>
                                        {% endfor %}
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <h1 class="text-center">{{ step.name }}</h1>
                        {% if step.instructions|raw %}
                        <div class="justified">
                            {{ step.instructions }}
                        </div>
                        {% endif %}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {# Load Claroline JS #}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/innovapath/js/Player/player.js') }}"></script>
{% endblock %}
