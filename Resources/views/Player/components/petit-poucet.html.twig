{% set history = app.session.get('history') %}
{% set visitedSteps = history[path.id] %}

 <div id="modal-history" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{{ 'history' | trans({}, 'innova_tools') }}</h4>
            </div>
            <div class="modal-body">
                <ul>
                {% for i, step in petitPoucet %}
                    <li>
                        <span class="lvl-indicator lvl-{{  step.lvl + 1 }}">&nbsp;</span>
                        <a href="{{ path('innova_path_player_index', { workspaceId: workspace.id, pathId: path.id, stepId: step.id }) }}">
                            {{ step.name }}
                        </a>
                    </li> 
                {% endfor %}
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'close' | trans({}, 'innova_tools') }}</button>
            </div>
        </div>
    </div>
</div>


