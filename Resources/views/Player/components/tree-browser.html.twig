{% import 'InnovaPathBundle::Player/components/macros.html.twig' as macros %}

<div id="full-tree" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">
                    <span class="fa fa-list"></span> {{ path.resourceNode.name }}
                </h4>
            </div>

            <div class="modal-body">
                <div id="do-not-display-anymore-container">
                    <label class="text-muted" for="do-not-display-anymore">
                        <input type="checkbox" id="do-not-display-anymore" name="do-not-display-anymore" />
                        {{ 'do_not_display_automatically' | trans({}, 'path_player') }}
                    </label>
                </div>

                <div>
                    <ul class="tree">
                        {% set parents = currentStep.getParents() %}
                        {{ macros.displayTreeItem(path.getRootStep(), parents, currentStep, path, workspace) }}
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'close' | trans({}, 'innova_tools') }}</button>
            </div>
        </div>
    </div>
</div>