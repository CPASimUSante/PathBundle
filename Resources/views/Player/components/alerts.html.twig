<div id="full-path-notice" class="alert alert-info alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    {{ 'full_path_notice_1' | trans({}, 'path_player') }} 
    <a class="tree-browser btn btn-default btn-sm nav-button" href="#" data-toggle="modal" data-target="#full-tree" rel="tooltip" data-original-title="{{ 'full_tree' | trans({}, 'path_player') }}"> 
        <span class="icon-list"></span>  
    </a> - 
    {{ 'full_path_notice_2' | trans({}, 'path_player') }}
</div>

{% for type, flashMessages in app.session.flashbag.all() %}
    {% for flashMessage in flashMessages %}
    <div class="{{ type }}">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        {{ flashMessage }}
    </div>
    {% endfor %}
{% endfor %}