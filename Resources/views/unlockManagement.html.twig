{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% block stylesheets %}
    {# Claroline CSS #}
    {{ parent() }}
    {# Path Editor styles #}
{% endblock %}

{% block content %}
    {% for path in paths if path.entity.published %}
        <span class="list-group-item">
        <a href="{{ path('innova_path_player_wizard', { id: path.entity.id }) }}">
            {{ path.entity.resourceNode.name }}
        </a>&nbsp;
        <em>{{ path.entity.description | striptags | truncate(40, true, ' [...]') }}</em>
            {% if path.canEdit %}
                <a href="{{ path('innova_paths_unlock', { id: path.entity.id}) }}" class="btn btn-default btn-xs pull-right">
                    <span class="fa fa-lock"></span>
                    {{ 'unlock'|trans({}, 'innova_tools') }}
                </a>
            {% endif %}
        </span>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {# Claroline JS #}
    {{ parent() }}
{% endblock %}