{% extends "ClarolineCoreBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/innovapath/css/Editor/app.css') }}"/>
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/innovapath/css/Editor/step-edit.css') }}"/>
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/innovapath/css/Editor/navbar.css') }}"/>
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/innovapath/css/angular-pageslide.less.css') }}"/>
{% endblock %}

{% block content %}
<div ng-cloak class="col-md-12 section-content" ng-app="EditorApp">
    <div ng-controller="MainCtrl">
        <div ng-show="templateSidebar.show">
            <a class="btn btn-default btn-templates" pageslide="left" ps-speed="0.5" href="#templates-sidebar">
                <span class="icon-heart"></span> Templates
            </a>
        </div>
        
        <div id="templates-sidebar" style="display:none" ng-controller="TemplateCtrl">
            <a id="templates-sidebar-close" href="#" class="btn btn-default btn-xs pull-right"><i class="icon-remove"></i></a>
            <div ng-include="'{{ asset('bundles/innovapath/angularjs/Template/Partial/templates-sidebar.html') }}'"></div>
        </div>
        
        <div class="panel panel-default panel-path-editor">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <button class="btn btn-default btn-xs" ng-click="openHelp()" tooltip="Help">
                        <span class="icon-question-sign"></span>
                    </button>
                    Editing Path : <strong>&lt;{% verbatim %}{{ path.name | truncate }}{% endverbatim %}&gt;</strong> in Workspace <strong>&lt;{{ workspace.name }}&gt;</strong>
                </h3>

                <div class="editor-buttons">
                    <div class="btn-group">
                        <button class="btn btn-default btn-sm" ng-click="undo()" ng-disabled="undoDisabled" tooltip="Undo"><span class="icon-reply"></span></button>
                        <button class="btn btn-default btn-sm" ng-click="redo()" ng-disabled="redoDisabled" tooltip="Redo"><span class="icon-share-alt"></span></button>
                    </div>
                    <button class="btn btn-sm btn-primary" ng-click="save(path)" tooltip="Save"><span class="icon-save"></span></button>
                    <a href="{{ path('claro_workspace_open_tool', {workspaceId: workspace.id, toolName: 'innova_path'}) }}" class="btn btn-danger btn-sm" tooltip="Back to list"><span class="icon-remove"></span></a>
                </div>
            </div>

            <div ng-include="webDir + 'angularjs/Editor/Partial/navbar.html'"></div>

            <div class="alerts col-md-12" ng-controller="AlertCtrl">
                <div ng-repeat="alert in alerts" class="alert alert-dismissable alert-{% verbatim %}{{ alert.type }}{% endverbatim %}">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true" ng-click="closeAlert({% verbatim %}{{ $index }}{% endverbatim %})">&times;</button>
                    {% verbatim %}{{ alert.msg }}{% endverbatim %}
                </div>
            </div>

            <div ng-view class="panel-body"></div>
        </div>
    </div>
</div>
{% endblock %}

