<div class="action-bar clearfix">
    <button class="btn btn-primary" ng-click="save(path)">
        <span class="icon-save"></span> {{ 'save'|trans({}, 'path_editor') }}
    </button>
    
    <div class="btn-group">
        <button class="btn btn-default" ng-click="undo()" ng-disabled="undoDisabled">
            <span class="icon-reply"></span> {{ 'undo'|trans({}, 'path_editor') }}
        </button>
        <button class="btn btn-default" ng-click="redo()" ng-disabled="redoDisabled">
            <span class="icon-share-alt"></span> {{ 'redo'|trans({}, 'path_editor') }}
        </button>
    </div>

    <div class="pull-right">
        <a href="{{ path('claro_workspace_open_tool', { workspaceId: workspace.id, toolName: 'innova_path' }) }}" class="btn btn-danger">
            <span class="icon-remove"></span> {{ 'back'|trans({}, 'path_editor') }}
        </a>
    </div>
</div>